on fileExists(posixPath)	try		do shell script "test -e " & quoted form of posixPath		return true	on error		return false	end tryend fileExistsset lockPath to "/tmp/study.lock"repeat while not (fileExists(lockPath))	delay 1end repeattell application "Shortcuts Events" to run the shortcut named "Enable DND"repeat while (fileExists(lockPath))	tell application "Firefox"		if running then quit	end tell	delay 2end repeattell application "Shortcuts Events" to run the shortcut named "Disable DND"